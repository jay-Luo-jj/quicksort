{% extends "bases/boxed_page.twig" %}
{% from "macros.twig" import button, checkbox, csrf %}
{% block boxed_content %}

<div class="box-title">
    Login
</div>
<form action="/login" method="POST">
    <div class="form-group">
        <div class="form-group-name">Username</div>
        <input name="username" type="text" value="{{ old('username') }}">
        <div class="form-group-error">
            {{ errors.first("username") }}
        </div>
    </div>
    <div class="form-group">
        <div class="form-group-name">Password</div>
        <input name="password" type="password">
        <div class="form-group-error">
            {{ errors.first("password") }}
        </div>
    </div>

    <div class="form-under-input form-small">
        <a href="/forgot-password">Forgot your password?</a>
    </div>

    <div class="form-buttons">
        <input type="submit" value="Log In">
        {{ button("Create an Account", "/register", true) }}
    </div>

    {{ csrf() }}
</form>

{% endblock %}